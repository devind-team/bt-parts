{
  "extends": [
    "@nuxt/eslint-config",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "!**/*",
    ".nuxt/**",
    ".output/**",
    "node_modules"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.vue"
      ],
      "rules": {
        "vue/multi-word-component-names": "off",
        "vue/max-attributes-per-line": [
          "error",
          {
            "singleline": {
              "max": 1
            },
            "multiline": {
              "max": 1
            }
          }
        ]
      }
    }
  ]
}